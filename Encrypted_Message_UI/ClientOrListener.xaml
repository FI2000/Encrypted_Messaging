<Page x:Class="Encrypted_Message_UI.ClientOrListener"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Encrypted_Message_UI"
      mc:Ignorable="d" 
      Title="ClientOrListener">

    <Grid>
        <!-- Stylish Rectangle -->
        <Rectangle Height="300" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Rectangle.Fill >
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="GhostWhite" Offset="0.2"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>

        </Rectangle>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Client" Click="ClientButton_Click" Width="100" Margin="10" RenderTransformOrigin="0.5,0.5"/>

            <Button Content="Listener" Click="ListenerButton_Click" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
